---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main id="main-content">
    <div class="not-found-wrapper">
      <h1 aria-label="404 Not Found">404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p>Page Not Found</p>
      <p class="text-center">
        Sorry, we couldn't find the page you're looking for.
        <br />
        <br />
        <span class="text-base">
          We recently rebuilt the website, refactoring some of the links. You
          can return to the homepage or search for your article on the website.
        </span>
      </p>
    </div>
    <LinkButton
      href="/"
      className="my-6 underline decoration-dashed underline-offset-8 text-lg"
    >
      Go back home
    </LinkButton>
  </main>
</Layout>

<Footer />

<style>
  #main-content {
    @apply mx-auto flex flex-col max-w-3xl flex-1 items-center justify-center;
  }
  .not-found-wrapper {
    @apply mb-14 flex flex-col items-center justify-center;
  }
  .not-found-wrapper h1 {
    @apply text-9xl font-bold text-skin-accent;
  }
  .not-found-wrapper p {
    @apply mt-4 text-2xl sm:text-3xl;
  }
</style>
